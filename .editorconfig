# editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[**.js]
indent_style = tab

[**.scss]
indent_style = space
indent_size = 2

[**.ts]
indent_style = tab

[{package.json,.eslintrc.json}]
indent_style = space
indent_size = 2
